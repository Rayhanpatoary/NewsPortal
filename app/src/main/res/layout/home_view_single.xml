            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"> </View>

            <LinearLayout
                android:id="@+id/small_news_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/small_news_image_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image_11"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/video_simble_id"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:src="@drawable/ic_outline_play_circle_filled_24px"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/small_news_headline_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:layout_gravity="center"
                        android:text="Quisque Lobortis Massa Quis Augue Venenatis"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/overlay_dark_90"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
