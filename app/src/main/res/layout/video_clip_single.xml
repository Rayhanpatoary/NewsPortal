<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/video_clip_container_id"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="10dp"

        >

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/video_clip_image_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_11"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/video_simble_id"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:src="@drawable/ic_outline_play_circle_filled_24px"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/video_clip_headline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="Headline"
                android:textSize="10dp"
                android:textColor="@color/overlay_dark_90"/>
        </LinearLayout>



    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
